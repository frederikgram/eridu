
<expr-stmt> ::=
    | expr? ";"


<stmt> ::= 
    | "if" "(" <expr> ")" <stmt> ("else" <stmt>)?
    | "for" "(" <expr-stmt> <expr>? ";" <expr>? ")" <stmt> 
    | "while" "(" <expr> ")" <stmt>
    | "continue" ";"
    | "break" ";"
    | "return" <expr>? ":"
    | "{" <compound-stmt>
    | <expr-stmt>

